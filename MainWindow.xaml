<Window x:Class="CsharpWpf01.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CsharpWpf01"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <StackPanel Orientation = "Horizontal" KeyDown = "OnTextInputKeyDown">
            <TextBox Width = "400" Height = "30" Margin = "10"/>
            <Button Click = "OnTextInputButtonClick"
            Content = "Save" Margin="30" Width = "50" Height="30"/>
        </StackPanel>

    </Grid>
</Window>
